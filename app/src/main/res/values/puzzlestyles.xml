<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">buttonClick</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@drawable/number_puzzle_btn</item>
        <item name="backgroundTintMode">src_over</item>
        <item name="backgroundTint">?android:attr/windowSplashScreenIconBackgroundColor</item>
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/sonsie_one</item>
    </style>

    <style name="PuzzleImageGridStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:onClick">buttonClick</item>
        <item name="backgroundTintMode">src_over</item>
        <item name="backgroundTint">?android:attr/windowSplashScreenIconBackgroundColor</item>
    </style>
</resources>