<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MathQuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/over_the_rainbow"
            android:gravity="center"
            android:text="MathQuiz"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtquestions"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/sonsie_one"
            android:gravity="center"
            android:text="Q: 1/10"
            android:textColor="@color/googlecolor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtrightAnswered"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/sonsie_one"
            android:gravity="center"
            android:text="RA: 1/10"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtAllquestions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/cloud"
        android:fontFamily="@font/sonsie_one"
        android:gravity="center"
        android:text="5 + 2 = ? "
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOption1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/vast_shadow"
        android:background="@drawable/btn_gradiant_blue"
        android:textColor="@color/white"
        android:layout_margin="3dp"
        android:text="13"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOption2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/vast_shadow"
        android:background="@drawable/btn_gradiant_blue"
        android:textColor="@color/white"
        android:layout_margin="3dp"
        android:text="7"
        android:textSize="18dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOption3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/vast_shadow"
        android:background="@drawable/btn_gradiant_blue"
        android:textColor="@color/white"
        android:layout_margin="3dp"
        android:text="9"
        android:textSize="18dp"
        android:textStyle="bold" />

</LinearLayout>