<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MathPuzzleResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/congratulation"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"/>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_serif_pro"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="Congratulations! Puzzle solved!" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/close"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Close"
                android:textColor="#E11616"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="#00000000"
                app:icon="@drawable/close_icon"
                app:iconSize="@dimen/emp_iconsize"
                app:iconTintMode="multiply" />

            <Button
                android:id="@+id/reset"
                android:layout_width="230dp"
                android:layout_height="75dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="Restart"
                android:textColor="#25912A"
                android:textSize="16dp"
                android:textStyle="bold"
                app:backgroundTint="#00000000"
                app:icon="@drawable/refresh"
                app:iconSize="@dimen/emp_iconsize"
                app:iconTintMode="multiply" />

            <Button
                android:id="@+id/next"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Next"
                android:textColor="#277FD6"
                android:textSize="18dp"
                android:textStyle="bold"
                app:backgroundTint="#00000000"
                app:icon="@drawable/next"
                app:iconSize="@dimen/emp_iconsize"
                app:iconTintMode="multiply" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>